@page
@model WebApplication.Pages.Products.StatisticModel

@{
    ViewData["Title"] = "Products Statistic";
    Layout = "_AdminLayout";
}

<h1>Products Statistic</h1>

<form method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Consignments</label>
        <div class="col-sm-10">
            <select name="consignmentId" class="form-control" asp-items="@Model.Consignments">
                <option value="-1">All Consignments</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ConsignmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].ImportPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].SellingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsignmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity) 
                 @item.Unit
            </td>
        </tr>
}
    </tbody>
</table>
