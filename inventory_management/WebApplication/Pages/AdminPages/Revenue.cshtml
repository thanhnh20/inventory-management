@page
@model WebApplication.Pages.AdminPages.RevenueModel

@{
    ViewData["Title"] = "Revenue";
    Layout = "_AdminLayout";
}

<h1>Revenue</h1>
<hr />
<form method ="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Search Type:</label>
        <div class="col-sm-10">
            <select name="type" class="form-control">
                <option value="exporterName" selected>Exporter Name</option>
                <option value="customerName">Customer Name</option>
            </select>
        </div>
    </div>
    <div class="input-group input-group-sm mb-3">
        <input class="form-control" type="text" name="search" />
    </div>
    <div class="form-group">
        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Revenues[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenues[0].ExporterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenues[0].OutputDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenues[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenues[0].TotalPrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Revenues)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExporterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OutputDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    <a asp-page="./RevenueDetail" asp-route-outputBillId="@item.OutputBillId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
